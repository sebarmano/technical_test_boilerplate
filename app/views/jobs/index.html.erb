<div class="max-w-6xl mx-auto">
  <!-- Header -->
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Vibe coded job board</h1>
    <p class="text-lg text-gray-600">Find your next opportunity</p>
  </div>

  <!-- Search Form -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <%= form_with url: root_path, method: :get, class: "flex flex-col sm:flex-row gap-4" do |form| %>
      <div class="flex-1">
        <%= form.text_field :q, 
            value: params[:q], 
            placeholder: "Search title or location", 
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all duration-200" %>
      </div>
      <div class="sm:w-48">
        <%= form.select :sort, 
            options_for_select([
              ["-- sort --", ""],
              ["Newest", "published_at desc"],
              ["Title", "title asc"]
            ], params[:sort]),
            {},
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all duration-200" %>
      </div>
      <%= form.submit "Go", 
          class: "px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200 shadow-sm" %>
    <% end %>
  </div>

  <!-- Jobs List -->
  <div class="space-y-4">
    <%# display count of jobs %>
    <p class="text-gray-600">Found <%= @pagination[:total_count] %> jobs</p>
    <% @jobs.each do |job| %>
      <%= render "jobs/card", job: job %>
    <% end %>
  </div>

  <!-- Pagination -->
  <%= render 'shared/pagination', pagination: @pagination, params: params, additional_params: [:published] %>

  <!-- Empty State -->
  <% if @jobs.empty? %>
    <div class="text-center py-12">
      <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No jobs found</h3>
      <p class="text-gray-600">Try adjusting your search criteria</p>
    </div>
  <% end %>
</div>